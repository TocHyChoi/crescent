	<bean class="com.tistory.devyongsik.database.HyperSqlDbServer" id="hsqldb" init-method="start">
	  <constructor-arg>
	   <value>
	    server.database.0=file:${webapp.root}/WEB-INF/database/hsqldb/collection
	    server.dbname.0=collection
	    server.remote_open=true
	    hsqldb.reconfig_logging=false
	   </value>
	  </constructor-arg>
 	</bean>
