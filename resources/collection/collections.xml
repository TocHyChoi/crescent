<?xml version="1.0" encoding="UTF-8"?>
<collections>
	<collection name="sample">
		<analyzer>com.tistory.devyongsik.analyzer.KoreanAnalyzer</analyzer>
		<indexingDirectory>/data1/lucene_index/sample</indexingDirectory>
		<!-- indexingDirectory>/data1/lucene_index/sample</indexingDirectory -->
		<!--  indexingDirectory>/Users/need4spd/Programming/Java/workspace/crescent/test/crescent_index/sample</indexingDirectory -->
		<fields>
			<!-- type : string, long, int -->
			<field name="board_id" store="true" index="false" type="long" analyze="false" termposition="false" termoffset="false" />
			<field name="title" store="true" index="true" type="string"	analyze="true" boost="2.0" />
			<field name="dscr" store="true" index="true" type="string" analyze="true" must="true" termvector="true" />
			<field name="creuser" store="true" index="false" type="string" analyze="false" />
		</fields>
		<defaultSearchFields>
			<defaultSearchField name="title" />
			<defaultSearchField name="dscr" />
		</defaultSearchFields>
		<sortFields>
			<sortField source="title" dest="title_sort" />
			<sortField source="board_id" dest="board_id_sort" />
		</sortFields>
	</collection>
	
	<collection name="glider_wiki">
		<analyzer>com.tistory.devyongsik.analyzer.KoreanAnalyzer</analyzer>
		<indexingDirectory>/data1/lucene_index/glider_wiki</indexingDirectory>
		<!-- indexingDirectory>/data1/lucene_index/glider_wiki</indexingDirectory -->
		<!--  indexingDirectory>/Users/need4spd/Programming/Java/workspace/crescent/test/crescent_index/glider_wiki</indexingDirectory -->
		<fields>
			<!-- type : string, long, int -->
			<field name="we_wiki_idx" store="true" index="false" type="long" analyze="false" />
			<field name="we_space_idx" store="true" index="false" type="long"	analyze="false"  />
			<field name="we_wiki_text" store="true" index="true" type="string" analyze="true" must="true" termvector="true" />
			<field name="we_wiki_title" store="true" index="true" type="string" analyze="true" must="true" boost="2.0" />
			<field name="we_ins_user" store="true" index="true" type="string" analyze="false" />
			<field name="we_ins_date" store="true" index="true" type="long" analyze="false" />			
		</fields>
		<defaultSearchFields>
			<defaultSearchField name="we_wiki_title" />
			<defaultSearchField name="we_wiki_text" />
		</defaultSearchFields>
		<sortFields>
			<sortField source="we_ins_date" dest="we_ins_date_sort" />
			<sortField source="we_wiki_idx" dest="we_wiki_idx_sort" />
		</sortFields>
	</collection>
</collections>